<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/menu_item</item>
        <item name="android:editTextColor">@color/menu_item</item>
    </style>

    <style name="NavigationView"  parent="Base.Theme.AppCompat">
        <item name="android:listDivider">@color/colorPrimaryMid</item>
    </style>

    <style name="app_title">
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textColor">@color/menu_item</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="list_toggle_button">
        <item name="android:layout_width">@dimen/toogle_size</item>
        <item name="android:layout_height">@dimen/toogle_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/toggle_padding</item>
        <item name="android:layout_marginEnd">@dimen/toggle_padding</item>
        <item name="android:textOff">""</item>
        <item name="android:textOn">""</item>
    </style>

    <style name="site_location_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/location_text_colour</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>
